pipeline {
    agent any 
    parameters { choice(name: 'Environment', choices: ['PILOT', 'QA', 'PROD','DEV'], description: 'Select the Environment to run the test')}

    stages {
        stage('Clean') { 
            steps {
                echo "hello Clean"
                cleanWs notFailBuild: true
            }
        }
        stage('checkout') { 
            steps {
                echo "hello checkout"
                checkout([$class: 'GitSCM', branches: [[name: '*/Workassist']], extensions: [], userRemoteConfigs: [[url: 'git@github.com:vishnura-Kore/test.git']]])         }
        }
        stage('Build') { 
            steps {
               
               bat "echo Build"
  

				dir("com.CFrame") { bat 'mvn clean compile' }
                  
               
           }
        }

        stage('Test') { 
            steps {
                bat "echo Test"
                dir("com.CFrame") {bat 'mvn -P %Environment% test'}
              

            }
        }
    }
    post {
        always {
            junit 'com.CFrame/src/test/java/testresult/cucumber-report/cucumber.xml'
                                             cucumber buildStatus: 'null', customCssFiles: '', customJsFiles: '', failedFeaturesNumber: -1, failedScenariosNumber: -1, failedStepsNumber: -1, fileIncludePattern: '/*.json', jsonReportDirectory: 'com.CFrame/src/test/java/testresult/cucumber-report', pendingStepsNumber: -1, reportTitle: 'XO platform report', skippedStepsNumber: -1, sortingMethod: 'ALPHABETICAL', undefinedStepsNumber: -1


                                             echo " job Done!"

                                             emailext subject: "Job '${env.JOB_NAME} - ${env.BUILD_NUMBER}:${currentBuild.currentResult}'", body: 'Refer to the Attachement', attachmentsPattern: 'com.CFrame/test-output/cucumber-html-reports/overview-features.html', to: 'jayakrishna.dandru@kore.com'
            }
        }
}

